<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clr_whitedown">
    <!--饭堂选择 使用单选钮组件-->
    <com.example.y430.apptest40.TableRadioGroup
        android:id="@+id/select_catin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--使用线性布局存放单选钮-->
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <!-- 全部饭堂，单选钮-->
            <RadioButton
                android:id="@+id/item_allcatin"
                android:text="@string/allcatin"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/AllMenuButton"
                app:layout_widthPercent="21%"
                app:layout_heightPercent="50%"
                app:layout_marginLeftPercent="4%"/>

            <!-- 一饭，单选钮-->
            <RadioButton
                android:id="@+id/item_1st"
                android:text="@string/catin_1st"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/AllMenuButton"
                app:layout_widthPercent="14%"
                app:layout_heightPercent="50%"
                app:layout_marginLeftPercent="4%"/>

            <!-- 二饭，单选钮-->
            <RadioButton
                android:id="@+id/item_2nd"
                android:text="@string/catin_2nd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/AllMenuButton"
                app:layout_widthPercent="14%"
                app:layout_heightPercent="50%"
                app:layout_marginLeftPercent="4%"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.example.y430.apptest40.TableRadioGroup>
</LinearLayout>
