<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clr_whitedown">
    <com.example.y430.apptest40.RadioGroup
        android:id="@+id/select_catin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RadioButton
                android:id="@+id/item_allcatin"
                android:text="@string/allcatin"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/AllMenuButton"
                app:layout_widthPercent="21%"
                app:layout_heightPercent="50%"
                app:layout_marginLeftPercent="4%"/>
            <RadioButton
                android:id="@+id/item_1st"
                android:text="@string/the_1st"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/AllMenuButton"
                app:layout_widthPercent="14%"
                app:layout_heightPercent="50%"
                app:layout_marginLeftPercent="4%"/>
            <RadioButton
                android:id="@+id/item_2nd"
                android:text="@string/the_2nd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/AllMenuButton"
                app:layout_widthPercent="14%"
                app:layout_heightPercent="50%"
                app:layout_marginLeftPercent="4%"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.example.y430.apptest40.RadioGroup>
</com.zhy.android.percent.support.PercentLinearLayout>
