        android:background="@drawable/today_drawer_button"
        app:layout_marginTopPercent="6.1%"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="6%"
        android:orientation="horizontal"
        app:layout_marginTopPercent="7.7%">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_widthPercent="3.8%"
        android:background="@drawable/page"
        app:layout_marginLeftPercent="5.3%"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="个性签名"
        app:layout_widthPercent="80%"
        android:textSize="10dp"
        app:layout_marginLeftPercent="1%"/>
</com.zhy.android.percent.support.PercentLinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7.3%"
        app:layout_widthPercent="94.7%"
        android:textSize="10dp"
        android:text="个性签名"
        app:layout_marginLeftPercent="5.3%"
        app:layout_marginTopPercent="7.7%"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.3%"
        android:orientation="horizontal"
        app:layout_marginTopPercent="7.7%">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="3.8%"
            android:background="@drawable/birthday_image"
            app:layout_marginLeftPercent="5.3%"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="生日及地区"
            app:layout_widthPercent="80%"
            android:textSize="10dp"
            app:layout_marginLeftPercent="1%"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent="31.5%"
        android:background="@drawable/f1_change"
        app:layout_widthPercent="6.7%"
        app:layout_heightPercent="2.9%"
        app:layout_marginLeftPercent="46.6%"

        />

</com.zhy.android.percent.support.PercentLinearLayout>