<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
<image.SmartImageView
    android:id="@+id/hot_dish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/hotdish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/clr_normal"
        android:textSize="36sp"
        app:layout_marginTopPercent="50%"/>

    <TextView
        android:id="@+id/hotdish_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/hotdish_name"
        android:textColor="@drawable/clr_normal"
        android:textSize="14sp"/>

</com.zhy.android.percent.support.PercentRelativeLayout>
