<?xml version="1.0" encoding="utf-8"?>
    <com.zhy.android.percent.support.PercentLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:background="@drawable/listitem_selector">
        <!-- 显示菜式图片-->
        <image.SmartImageView
            android:id="@+id/today_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            app:layout_widthPercent="23%w"
            app:layout_heightPercent="23%w"
            app:layout_marginLeftPercent="3%"/>
        <!-- 显示菜式名称、价格、介绍-->
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|left"
            app:layout_widthPercent="67%"
            app:layout_marginLeftPercent="4%">
            <TextView
                android:id="@+id/today_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#4a4a4a" />
            <TextView
                android:id="@+id/today_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#4a4a4a" />
            <TextView
                android:id="@+id/today_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="12sp"
                android:textColor="#666666"
                android:ellipsize="end"
                android:maxLines="2"/>
            <!-- 显示地址和喜爱人数-->
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                app:layout_heightPercent="11%">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/today_addr"
                    android:scaleType="fitCenter"
                    app:layout_widthPercent="5%"
                    app:layout_marginLeftPercent="30%"/>
                <TextView
                    android:id="@+id/today_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    app:layout_marginLeftPercent="38%"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/today_lovedno"
                    android:scaleType="fitCenter"
                    app:layout_widthPercent="7%"
                    app:layout_marginLeftPercent="80%"/>
                <TextView
                    android:id="@+id/today_lovedno"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    app:layout_marginLeftPercent="89%"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
